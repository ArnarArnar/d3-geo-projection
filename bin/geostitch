#!/usr/bin/env node

var commander = require("commander"),
    d3GeoProjection = require("../"),
    geotransform = require("./geotransform");

commander
    .version(require("../package.json").version)
    .usage("[options]")
    .description("Stitch equirectangular GeoJSON in degrees, removing antimeridian cuts.")
    .option("-i, --in <file>", "input file name; defaults to “-” for stdin", "-")
    .option("-o, --out <file>", "output file name; defaults to “-” for stdout", "-")
    .option("-n, --newline-delimited", "use newline-delimited JSON")
    .parse(process.argv);

if (commander.args.length !== 0) {
  console.error();
  console.error("  error: unexpected arguments");
  console.error();
  process.exit(1);
}

geotransform(d3GeoProjection.geoStitch);
